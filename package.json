{
    "name": "script",
    "private": true,
    "version": "0.0.1",
    "author": "onionalive",
    "dependencies": {},
    "devDependencies": {
        "node-sass": "^4.4.0",
        "babel-core": "^6.22.1",
        "eslint": "^3.14.1",
        "browserify": "^11.0.1",
        "dotenv": "^1.2.0",
        "imagemin-pngquant": "^4.2.0",
        "jshint-stylish": "^2.0.1",
        "node-bourbon": "^4.2.3",
        "node-neat": "^1.7.2",
        "rimraf": "^2.4.3",
        "run-sequence": "^1.1.2",
        "stream-browserify": "^2.0.1",
        "vinyl-buffer": "^1.0.0",
        "vinyl-source-stream": "^1.1.0"
    },
    "engines": {
        "node": ">=0.10.0"
    },
    "scripts": {
        "install": "npm install && bower install && composer install",
        "setup": "setup.js",
        "lint": "jshint **.js",
        "build:sass": "node-sass -r --output-style compressed src/style.scss -o dist",
        "build:js": "babel-core -r --output-style compressed src/scripts.js -o dist",
        "build:all": "npm run build:sass && npm run build:js",
        "watch:css": "onchange 'src/scss/*.scss' -- npm run build:css",
        "watch:js": "onchange 'src/js/*.js' -- npm run build:js",
        "watch:all": "parallelshell 'npm run watch:css' 'npm run watch:js'"
    }
}
